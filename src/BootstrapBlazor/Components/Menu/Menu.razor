@namespace BootstrapBlazor.Components
@inherits BootstrapComponentBase

<nav @attributes="@AdditionalAttributes" class="@ClassString" @ref="MenuElemenet">
    <CascadingValue Value="this" IsFixed="true">
        @if (IsBreadcrumb)
        {
            <TipMenu Items="@Items" OnClick="@OnClickMenu"></TipMenu>
        }
        else if (IsVertical && !IsBreadcrumb)
        {
            <SideMenu Items="@Items" OnClick="@OnClickMenu" />

            @if (UseTipMenu)
            {
                <TipMenu Items="@Items" OnClick="@OnClickMenu"></TipMenu>
            }
        }
        else
        {
            <TopMenu Items="@Items" OnClick="@OnClickMenu" />
        }
    </CascadingValue>
</nav>
